{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "client/build",
    "installCommand": "npm run install-all",
    "functions": {
      "server/index.js": {
        "maxDuration": 30
      }
    },
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/server/index.js"
      },
      {
        "source": "/(.*)",
        "destination": "/client/build/index.html"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }